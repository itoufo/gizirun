# ===========================================
# Notta Environment Variables
# ===========================================

# App URL (REQUIRED in production - must include protocol)
# Used for webhook URL generation
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/notta?schema=notta"
DIRECT_URL="postgresql://user:password@localhost:5432/notta?schema=notta"

# ===========================================
# Supabase
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# ===========================================
# Transcription Services
# ===========================================
DEEPGRAM_API_KEY=""
ASSEMBLYAI_API_KEY=""

# ===========================================
# OpenAI
# ===========================================
OPENAI_API_KEY=""

# ===========================================
# Meeting Bot (Meeting BaaS)
# ===========================================
MEETING_BAAS_API_KEY=""
MEETING_BAAS_WEBHOOK_SECRET=""

# ===========================================
# WebSocket Server
# CRITICAL for real-time meeting transcription
# ===========================================

# Client-side WebSocket URL (REQUIRED)
# - Development: ws://localhost:3001/api/realtime
# - Production: wss://your-ws-server.railway.app/api/realtime (must be wss:// for HTTPS sites)
NEXT_PUBLIC_WS_URL="ws://localhost:3001/api/realtime"

# Server-side WebSocket URL (REQUIRED in production)
# - Development: http://localhost:3001
# - Production: Use internal service URL (e.g., http://ws-service.railway.internal:3001)
WS_SERVER_URL="http://localhost:3001"

# WebSocket server port
WS_PORT="3001"

# Shared secret between Next.js and WebSocket server (REQUIRED)
# Must be the same value in both services
BROADCAST_SECRET="your-broadcast-secret-here"

# Allowed origins for WebSocket connections (comma-separated)
# - Development: http://localhost:3000
# - Production: https://your-app.railway.app
ALLOWED_ORIGINS="http://localhost:3000"

# ===========================================
# Storage (AWS S3)
# ===========================================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-northeast-1"
S3_BUCKET_NAME=""
